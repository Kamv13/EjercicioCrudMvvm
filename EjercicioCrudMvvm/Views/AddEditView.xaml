<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioCrudMvvm.Views.AddEditView"
             xmlns:viewModel="clr-namespace:EjercicioCrudMvvm.ViewModels"
             x:DataType="viewModel:AddEditViewModel"
             Title="AddEditView">
    
    
    
    <VerticalStackLayout Padding="30" Spacing="5">
        <Label Text="Nombre" />
        <Entry Text="{Binding Nombre}" Keyboard="Text" />

        <Label Text="Direccion" />
        <Entry Text="{Binding Direccion}" Keyboard="Text" />
        
        <Label Text="Email" />
        <Entry Text="{Binding Email}" Keyboard="Text" />

        <Label Text="Producto" />
        <Entry Text="{Binding Producto}" Keyboard="Text" />

        <Button Text="Guardar" Background="Green" Command="{Binding AddUpdateCommand}" />

    </VerticalStackLayout>
</ContentPage>